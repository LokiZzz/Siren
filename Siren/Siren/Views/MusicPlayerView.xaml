<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:assets="clr-namespace:Siren.Assets"
             x:Class="Siren.Views.MusicPlayerView">
    <ContentView.Content>
        <Grid RowDefinitions="auto" ColumnDefinitions="*">
            <Frame Padding="0" BackgroundColor="{StaticResource Light}" CornerRadius="{StaticResource CornerRadiusMedium}">
                <Grid Padding="10" ColumnSpacing="10" ColumnDefinitions="auto,*,auto">

                    <ProgressBar Grid.ColumnSpan="3" VerticalOptions="Fill" HorizontalOptions="Fill"
                                 Progress="{Binding PositionPercent}" 
                                 ProgressColor="{StaticResource DarkGreen}" 
                                 BackgroundColor="Transparent"
                                 Margin="-15"
                                 IsVisible="{Binding IsPlaying}"/>
                    
                    <Grid Grid.Column="2" RowDefinitions="30" ColumnDefinitions="30">
                        <Button Grid.Row="0" 
                            Style="{StaticResource DeleteButton}"
                            Command="{Binding BindingContext.DeleteMusicCommand,Source={RelativeSource AncestorType={x:Type FlexLayout}}}" 
                            CommandParameter="{Binding .}"/>
                    </Grid>

                    <Button Grid.Column="0" Style="{StaticResource DeleteButton}"
                            VerticalOptions="Center"
                            Text="{x:Static assets:FAFont.CirclePlay}" 
                            Command="{Binding PlayCommand}"
                            BackgroundColor="{StaticResource DarkGreen}">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding IsPlaying}" Value="True">
                                <Setter Property="Text" Value="{x:Static assets:FAFont.CircleStop}"/>
                                <Setter Property="BackgroundColor" Value="{StaticResource Red}"/>
                                <Setter Property="Command" Value="{Binding StopCommand}"/>
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>

                    <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="0" VerticalOptions="Start">
                        <Label TextColor="{StaticResource TextColor}" 
                           Text="{Binding Alias}"
                           VerticalOptions="Center" 
                           VerticalTextAlignment="Center"
                           LineBreakMode="TailTruncation"/>
                        <Button Style="{StaticResource EditAliasButton}"
                            Command="{Binding BindingContext.EditMusicCommand,Source={RelativeSource AncestorType={x:Type FlexLayout}}}" 
                            CommandParameter="{Binding .}"/>
                    </StackLayout>
                </Grid>
            </Frame>
        </Grid>
    </ContentView.Content>
</ContentView>