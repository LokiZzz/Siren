<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Siren.Views.AboutPage"
             xmlns:vm="clr-namespace:Siren.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="*,*" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="400">

        <Grid Grid.Row="0" ColumnDefinitions="*, auto">
            <Slider Grid.Column="0" Maximum="{Binding TrackDurationSeconds}" Minimum="0" Value="{Binding Position}" 
                    DragStartedCommand="{Binding SeekCommand}" DragCompletedCommand="{Binding StopSeekCommand}"
                    MinimumTrackColor="GreenYellow" MaximumTrackColor="Gray" ThumbColor="Red"/>
            <Label Grid.Column="1" Text="{Binding Time, StringFormat='{0:mm}:{0:ss}'}"/>
        </Grid>
        
        <StackLayout Grid.Row="1" Orientation="Horizontal">
            <Button Text="Open" Command="{Binding OpenCommand}"/>
            <Button Text="Play / Pause" Command="{Binding PlayCommand}"/>
            <Button Text="Stop" Command="{Binding StopCommand}"/>
        </StackLayout>
        
    </Grid>

</ContentPage>
